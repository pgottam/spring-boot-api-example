pipeline {
    agent any

    triggers {
        pollSCM '* * * * *'
    }
    stages {
        stage('Build') {
            steps {
                sh './gradlew assemble'
            }
        }
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
        stage('Build Docker image') {
            steps {
                sh './gradlew docker'
            }
        }
        stage('Push Docker image') {
            environment {
                DOCKER_HUB_LOGIN = credentials('docker-hub')
            }
            steps {
                sh 'pwd'
 		sh 'rm -rf /var/jenkins_home/workspace/yelb_master/yelb'
		sh 'cd /var/jenkins_home/workspace'
                sh 'rm -rf yelb-deploy'
		sh 'mkdir yelb-deploy'
                sh 'cd yelb-deploy'
		sh 'pwd'
		sh 'ls'
		sh 'git clone https://github.com/pgottam/yelb.git'
                sh 'cd yelb'
		sh 'ls'
                sh 'cd bootup'
		sh 'sed -i -e "s/spring-boot-api-example:latest/spring-boot-api-example:latest/g" boot.yaml'
		sh 'git add --all'
		sh 'git commit -m "updated tag"'
		sh 'git push'
		sh 'ls'
 		sh 'cd /var/jenkins_home/workspace/yelb_master'
		sh 'docker login --username=$DOCKER_HUB_LOGIN_USR --password=$DOCKER_HUB_LOGIN_PSW'
                sh './gradlew dockerPush'
            }
        }
    }
}
